<Window x:Class="Labb03_GUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Labb03_GUI"
        xmlns:dialogs="clr-namespace:Labb03_GUI.Dialogs"
        xmlns:views="clr-namespace:Labb03_GUI.Views"
        mc:Ignorable="d"
        d:Height='800' d:Width="400"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="20" />
            <RowDefinition Height="2*" />
        </Grid.RowDefinitions>
        <StackPanel>
            <TextBox 
                Margin="10 10 10 0"
                Text="{Binding Path=Name}"
                />
            <Button
                Margin="10 10 10 0"
                Content="Update name!"
                Click="Button_Click"
                />
            <Label
                Content="{Binding Path=TimeLimitInSeconds}"
                />
        </StackPanel>
        <ListBox 
            Margin="10"
            Grid.Row="1"
            ItemsSource="{Binding Questions}"
            DisplayMemberPath="Query"
            />
        <views:MenuView Grid.Row="2"/>
        <views:ConfigurationView Grid.Row="3" />
    </Grid>
</Window>
