<UserControl x:Class="Labb03_GUI.Views.PlayerEndScreenView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Labb03_GUI.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" d:Background="White">
    <UserControl.Resources>
        <Style x:Key="EndScreenButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Cornsilk"/>
            <Setter Property="BorderBrush" Value="Gray"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Margin" Value="20"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>
    </UserControl.Resources>
    <Grid>
        <StackPanel
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Orientation="Vertical">
            <TextBlock
                Margin="10"
                Text="Quiz is over"
                />
            <StackPanel
                Orientation="Horizontal">
                <TextBlock
                    FontSize="30"
                    Text="you got "/>
                <TextBlock
                    FontSize="30"
                    Foreground="Green"
                    Text="{Binding PlayerViewModel.NumberOfCorrectAnswers}"/>
                <TextBlock
                    FontSize="30"
                    Text=" out of "/>
                <TextBlock
                    FontSize="30"
                    Foreground="Red"
                    Text="{Binding ActivePack.Questions.Count}"/>
                <TextBlock
                    FontSize="30"
                    Text=" answers correct "/>
            </StackPanel>
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        >
                <Button
                    Style="{StaticResource EndScreenButtonStyle}"
                    Content="Play again"
                    Command="{Binding OpenPlayerViewCommand}"/>
                <Button
                    Style="{StaticResource EndScreenButtonStyle}"
                    Content="Return to edit view"
                    Command="{Binding OpenConfigViewCommand}"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
