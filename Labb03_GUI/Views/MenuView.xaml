<UserControl x:Class="Labb03_GUI.Views.MenuView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Labb03_GUI.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <DockPanel>
            <Menu DockPanel.Dock="Top">
                <MenuItem Header="File">
                    <MenuItem Header="New Question Pack">
                        <MenuItem.Icon>
                            <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE82E;" FontSize="15"/>
                        </MenuItem.Icon>
                    </MenuItem>
                        <MenuItem Header="Select Question Pack">
                            <MenuItem.Icon>
                                <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE82D;" FontSize="15"/>
                            </MenuItem.Icon>
                            <MenuItem Header="Test"/>
                        </MenuItem>
                    <MenuItem Header="Delete Question Pack">
                        <MenuItem.Icon>
                            <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE750;" FontSize="15"/>
                        </MenuItem.Icon>
                    </MenuItem>
                    <Separator />
                    <MenuItem Header="Import Questions">
                        <MenuItem.Icon>
                            <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xEA52;" FontSize="15"/>
                        </MenuItem.Icon>
                    </MenuItem>
                    <Separator />
                    <MenuItem Header="Exit">
                        <MenuItem.Icon>
                            <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xEF2C;" FontSize="15"/>
                        </MenuItem.Icon>
                    </MenuItem>
                </MenuItem>
                
                <MenuItem Header="Edit">
                    <MenuItem Header="Add Question" />
                    <MenuItem Header="Remove Question" />
                    <MenuItem Header="Pack Options" />
                </MenuItem>
                
                <MenuItem Header="View">
                    <MenuItem Header="Play" />
                    <MenuItem Header="Edit" />
                    <Separator />
                    <MenuItem Header="Fullscreen" />
                </MenuItem>
            </Menu>
        </DockPanel>
    </Grid>
</UserControl>
