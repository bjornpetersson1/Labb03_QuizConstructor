<UserControl x:Class="Labb03_GUI.Views.ConfigurationView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Labb03_GUI.Views"
             mc:Ignorable="d" 
             d:Background="White"
             d:DesignHeight="450" d:DesignWidth="800">
    
    <UserControl.Resources>
        <Style x:Key="IconButtonStyle" TargetType="Button">
            <Setter Property="FontFamily" Value="Segoe MDL2 Assets"/>
            <Setter Property="Width" Value="20"/>
            <Setter Property="Height" Value="20"/>
            <Setter Property="Margin" Value="0 0 5 0"/>
            <Setter Property="BorderBrush" Value="Gray"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
    </UserControl.Resources>
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="*" />
            <RowDefinition Height="2*" />
        </Grid.RowDefinitions>
        
        <Label
            HorizontalAlignment="Left"
            VerticalAlignment="Bottom"
            Margin="10 0 0 0"
            FontWeight="Bold"
            Content="{Binding ActivePack.Name}" />
        
        <StackPanel 
            Orientation="Horizontal"
            VerticalAlignment="Bottom"
            HorizontalAlignment="Right"
            Margin="10 5"
            >
            <Button
                Style="{StaticResource IconButtonStyle}"
                ToolTip="Add Question"
                Content="&#xE710;" 
                Command="{Binding ConfigurationViewModel.AddQuestionCommand}"/>
            <Button
                Style="{StaticResource IconButtonStyle}"
                ToolTip="Remove Question"
                Content="&#xE738;"
                Command="{Binding ConfigurationViewModel.RemoveQuestionCommand}"/>
            <Button
                Style="{StaticResource IconButtonStyle}"
                ToolTip="Pack Options"
                Content="&#xE713;"
                Command="{Binding MenuViewModel.OpenOptionsDialogCommand}"
                />
        </StackPanel>
        
        <ListBox 
            x:Name="myQuestionListBox"
            Grid.Row="1"
            Grid.RowSpan="2"
            Margin="5"
            ItemsSource="{Binding ActivePack.Questions}"
            SelectedItem="{Binding ConfigurationViewModel.SelectedQuestion, Mode=TwoWay}"
        >
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <TextBlock FontWeight="Bold" Text="Question:" />
                        <TextBlock Text="{Binding Query}" />
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        
        <DockPanel
            Grid.Row="1"
            Grid.Column="1"
            IsEnabled="{Binding ConfigurationViewModel.CanEditQuestion}">
            <Label
                DockPanel.Dock="Top"
                FontWeight="Bold"
                Content="Question:" />
            <TextBox
                Margin="5 5 20 0"
                TextWrapping="Wrap"
                Text="{Binding 
                    ElementName=myQuestionListBox, 
                    Path=SelectedItem.Query, 
                    Mode=TwoWay, 
                    UpdateSourceTrigger=PropertyChanged}"/>
        </DockPanel>
        
        <StackPanel
            Grid.Row="2"
            Grid.Column="2"
            IsEnabled="{Binding ConfigurationViewModel.CanEditQuestion}">
            <Label
                Margin="0 30 0 0"
                FontWeight="Bold"
                Content="Correct Answer:" />
            <TextBox
                Margin="5 0 20 10"
                Text="{Binding ElementName=myQuestionListBox, Path=SelectedItem.CorrectAnswer, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
            <Label
                FontWeight="Bold"
                Content="First Incorrect Answer:" />
            <TextBox
                Margin="5 0 20 10"
                Text="{
                    Binding ElementName=myQuestionListBox, 
                    Path=SelectedItem.IncorrectAnswers[0], 
                    Mode=TwoWay, 
                    UpdateSourceTrigger=PropertyChanged}"/>
            <Label
                FontWeight="Bold"
                Content="Second Incorrect Answer:" />
            <TextBox
                Margin="5 0 20 10"
                Text="{
                    Binding ElementName=myQuestionListBox, 
                    Path=SelectedItem.IncorrectAnswers[1], 
                    Mode=TwoWay, 
                    UpdateSourceTrigger=PropertyChanged}"/>
            <Label
                FontWeight="Bold"
                Content="Third Incorrect Answer:" />
            <TextBox
                Margin="5 0 20 10"
                Text="{
                    Binding ElementName=myQuestionListBox, 
                    Path=SelectedItem.IncorrectAnswers[2], 
                    Mode=TwoWay, 
                    UpdateSourceTrigger=PropertyChanged}"/>
        </StackPanel>
    </Grid>
</UserControl>
