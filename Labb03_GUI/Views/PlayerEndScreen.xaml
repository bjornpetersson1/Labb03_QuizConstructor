<UserControl x:Class="Labb03_GUI.Views.PlayerEndScreen"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Labb03_GUI.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" d:Background="White">
    <Grid>
        <StackPanel
                HorizontalAlignment="Center"
                VerticalAlignment="Center">
            <TextBlock
                Margin="10"
                Text="Quiz is over"
                />
            <StackPanel
                Orientation="Horizontal">
                <TextBlock
                    FontSize="30"
                    Text="you got "/>
                <TextBlock
                    FontSize="30"
                    Foreground="Green"
                    Text="{Binding PlayerViewModel.NumberOfCorrectAnswers}"/>
                <TextBlock
                    FontSize="30"
                    Text=" of "/>
                <TextBlock
                    FontSize="30"
                    Foreground="Red"
                    Text="{Binding ActivePack.Questions.Count}"/>
                <TextBlock
                    FontSize="30"
                    Text=" answers correct "/>

            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
