<Window x:Class="Labb03_GUI.Dialogs.PackOptionsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Labb03_GUI.Dialogs"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="PackOptionsDialog" Height="200" Width="200">
    <Grid>
        <StackPanel>
            <Label
                Content="Pack Name:"
                FontWeight="Bold"
                Margin="10 5 10 0"
                />
            <TextBox
                Margin="10 0 10 0"
                Text="{Binding ActivePack.Name, UpdateSourceTrigger=LostFocus}"
                />
            <Label
                Content="Difficulty:"
                FontWeight="Bold"
                Margin="10 5 10 0"
                />
            <ComboBox               
                Margin="10 0 10 0"
                ItemsSource="{Binding ActivePack.Difficulties}"
                SelectedItem="{Binding ActivePack.Difficulty}">
            </ComboBox>
            <Grid HorizontalAlignment="Stretch">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Label
                    HorizontalAlignment="Left"
                    
                    Content="Time Limit:"
                    FontWeight="Bold"
                    Margin="10 5 10 0"/>
                <Label
                    HorizontalAlignment="Right"
                    Grid.Column="1"
                    x:Name="mySecondsLabel"
                    Content="{Binding ElementName=mySlider, Path=Value}"
                    Margin="0 5 10 0"/>
            </Grid>
            <Slider
                x:Name="mySlider"
                Margin="10 0 10 0"
                Minimum="5"
                Maximum="120"
                TickFrequency="5"
                TickPlacement="BottomRight"
                IsSnapToTickEnabled="True"
                Value="{Binding ActivePack.TimeLimitInSeconds, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                />
        </StackPanel>
    </Grid>
</Window>
